# LLM4Reading Environment Variables
# Copy this file to secrets.env and fill in your actual values

# LLM API Configuration
# For OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# For DeepSeek API (recommended for cost-effectiveness)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Generic LLM API settings (will use the provider specified in config.yaml)
LLM_API_KEY=your_llm_api_key_here
LLM_BASE_URL=your_llm_base_url_here

# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username
GITHUB_REPO=your_target_repository_name

# Email Notification Configuration (Optional)
# 用于发送每日论文报告邮件
# 邮件中会包含arXiv链接、GitHub链接和RTD文档链接
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password
RECIPIENT_EMAIL=recipient@example.com

# Legacy Notification Configuration (Optional)
NOTIFICATION_EMAIL=your_notification_email@example.com
NOTIFICATION_WEBHOOK=your_webhook_url_for_notifications
